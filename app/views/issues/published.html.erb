<div id="container" class="<%= @issue.role.downcase %> <%= @issue.orientation.downcase %>">
  <div id="wrapper">
    <ul id="scroll-content" class="menu">
      <% @thumbnails.sort_by(&:master_position).each do |thumbnail| %>
        <li class="menu-item">
          <%= link_to(issue_published_path(@issue.alias_name, thumbnail.friendly_id), class: 'nav-fade', rel: 'external') do %>
            <%= sidebar_thumbnail_for(thumbnail, @articles, alt: thumbnail.title, width: "250", height: "167") %>
          <% end %>
        </li>
      <% end %>
			<p>Â© The Shift Drink - All Rights Reserved</p>
    </ul>
  </div>

  <%= render 'issues/shared/content' %>

  <div class="ad-wrapper">

    <div id="main-advertisements">
      <%= render 'issues/shared/advertisements' %>
    </div>
	</div>

  <% if browser.device.mobile? %>
		<div class="ad ad-mob ad-mobile">
