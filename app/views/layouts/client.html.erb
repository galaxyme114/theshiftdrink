	<script type="text/javascript">
    bioEp.init({
			cookieExp: 1,
			onPopup: function() {
				if ($("#container.material")[0] != undefined)
					$("#bio_ep_close").click();
				var facebook = $(".at-follow-btn").last().find(".addthis_follow_label")[0];
				if (facebook)
					facebook.innerText = "Facebook (editor)";
				var google = $($(".at-follow-btn")[2]).find(".addthis_follow_label")[0];
				if (google)
					google.innerText = "Google Plus";
				$("#bio_ep_close").css("display", "block");
				$("#bio_ep_close").on('click', function() {
					$("#bio_ep_close").css("display", "none");
				});
				$("#bio_ep").animate({opacity: 1}, 750);
			}
    });
	</script>
