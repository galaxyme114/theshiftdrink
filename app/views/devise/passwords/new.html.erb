<% content_for :devise do %>
	<div class="panel panel-default">
		<div class="panel-heading text-centered">
			<h3 class="panel-title">Forgot your password?</h3>
		</div>
		<div class="panel-body">
			<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<fieldset>
				<div class="form-group">
					<input autofocus="autofocus" class="string email form-control" placeholder="Email" id="user_email" name="user[email]" type="email">
				</div>

				<%= f.button :submit, 'Send Reset Instructions', class: 'btn btn-default btn-block' %>
			</fieldset>
			<% end %>
		</div>
	</div>

	<p class="text-centered">
		<%= link_to "Need to log in?", new_session_path(resource_name) %>        
	</p>
<% end %>

<%= render 'devise/shared/layout' %>