<% content_for :title do %>
  <h4>Account Settings</h4>
<% end %>

<% content_for :buttons do %>

<% end %>

<% content_for :page_content do %>
<div class"row">
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Change Password</h3>
			</div>
			<%= simple_form_for(current_user, url: account_password_path, method: :patch) do |f| %>
				<div class="panel-body">

					<div class="form-group">
						<%= f.input :password, error: false,  input_html: { :class => 'form-control' } %>
					</div>

					<div class="form-group">
						<%= f.input :password_confirmation, error: false, label: 'Confirm Password', input_html: { :class => 'form-control' } %>
					</div>
				</div>

				<div class="panel-footer">
					<%= f.button :submit, 'Change Password',  :class => 'btn btn-default btn-sm' %>
				</div>
			<% end %>
		</div>
	</div> <!-- /.col-md-4 -->
	<div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Edit Profile</h3>
        </div>

        <%= simple_form_for(current_user, url: account_profile_path, method: :patch) do |f| %>

          <div class="panel-body">

            <div class="form-group">
              <%= f.input :name, label: 'Full Name', error: false, input_html: { :class => 'form-control' } %>
            </div>

            <div class="form-group">
              <%= f.input :email, error: false, input_html: { :class => 'form-control' } %>
            </div>

            <div class="form-group">
              <%= f.input :title, error: false, input_html: { :class => 'form-control' } %>
            </div>

          </div>

          <div class="panel-footer">
            <%= f.button :submit, 'Edit Profile', :class => 'btn btn-default btn-sm' %>
          </div>
        <% end %>
      </div>
	</div><!-- /.col-md-8 -->
</div> <!--  /.row -->
<% end %>

<%= render 'admin/shared/layout' %>
