<% if can?(:administrate, Page) %>
    <div class="caption">
		<p class="no-margin">
			<%= link_to('Edit', edit_page_path(@issue, @article, page), :class => 'label label-default') %>

			<%= link_to 'Links', page_hyperlinks_path(@issue, @article, page), :class => 'label label-default' %>

			<%= link_to('Remove', page_path(@issue, @article, page), method: :delete, :class => 'label label-danger', data: { confirm: 'Are you sure you want to remove this page?' }) %>

			<p>A: <%= page.position %> | M: <%= page.master_position %></p>
		</p>
	</div>
<% end %>
