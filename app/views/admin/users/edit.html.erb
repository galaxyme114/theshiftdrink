<% content_for :title do %>
  <h4>Users - EDIT</h4>
<% end %>

<% content_for :buttons do %>
    <%= link_to users_path, :class => 'btn btn-labeled btn-default' do %>
    	<span class="btn-label"><i class="fa fa-list"></i></span> View Users
    <% end %>
<% end %>

<% content_for :page_content do %>
<div class="col-md-8">
  <div class="panel panel-default">
    <div class="panel-heading text-strong">Edit User</div>

    <%= simple_form_for(@user) do |f| %>
      <div class="panel-body">
          <div class="form-group">
            <%= f.input :name, label: 'Full Name', error: false %>
          </div>

          <div class="form-group">
            <%= f.input :email, error: false %>
          </div>

          <div class="form-group">
            <%= f.input :title, error: false %>
          </div>

          <div class="form-group">
            <%= f.input :role, collection: ['Administrator', 'Editor', 'User'], selected: 'User' %>
          </div>
      </div>
      <div class="panel-footer">
        <%= f.button :submit, :class => 'btn btn-primary btn-sm' %>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<%= render 'admin/shared/layout' %>
