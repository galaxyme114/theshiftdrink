<% content_for :title do %>
  <h4>Primary - new</h4>
<% end %>

<% content_for :buttons do %>
    <%= link_to issues_path, :class => 'btn btn-labeled btn-default' do %>
      <span class="btn-label"><i class="fa fa-list"></i></span> Back to Documents
    <% end %>
<% end %>

<% content_for :page_content do %>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">Create Primary Document</div>

      <%= simple_form_for(@issue) do |f| %>
        <div class="panel-body">
          <div class="form-group">
            <%= f.input :title, error: false, input_html: { :class => 'form-control' } %>
          </div>

          <div class="form-group hidden">
            <%= f.input :number, collection: issue_numbers, selected: ("%03d" % (issue_count.to_i + 1).to_s), error: false, input_html: { :class => 'form-control' } %>
          </div>

          <div class="form-group required">
            <%= f.input :alias_name, label: 'Custom URL (m-<name> / <name>, i.e. m-issue / issue)', error: false, input_html: { class: 'form-control'} %>
          </div>

          <div class="form-group">
            <%= f.input :orientation, collection: ['mobile', 'desktop'], error: false, input_html: { :class => 'form-control' } %>
          </div>
        </div>

        <div class="panel-footer">
          <%= f.button :submit, :class => 'btn btn-primary btn-sm' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= render 'admin/shared/layout' %>
