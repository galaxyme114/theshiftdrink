<div class="row">
	<div class="col-md-<%= layout_length %> no-padd">
		<nav class="navbar navbar-primary navbar-default">
			<ul class="nav navbar-nav">
				<li id="n-issues" class="<%= 'active' if (!@issues.nil? || (!@issue.nil? && @issue.role == 'Issue')) %>"><%= link_to('Primary', issues_path) %></li>
				<li id="n-materials" class="<%= 'active' if (!@materials.nil? || (!@issue.nil? && @issue.role == 'Material') || @_request.env["REQUEST_PATH"].include?("materials")) %>"><%= link_to('Supplemental', materials_path) %></li>
				<!-- <li id="n-analytics"><%= link_to('Analytics', analytics_path) %></li> -->
				<li id="n-users"  class="<%= 'active' if @_request.env["REQUEST_PATH"].include?("users") %>"><%= link_to('Users', users_path) %></li>
				<li id="n-comments"  class="<%= 'active' if @_request.env["REQUEST_PATH"].include?("comments") %>"><%= link_to('Comments', comments_path) %></li>
				<li id="n-settings" class="<%= 'active' if @_request.env["REQUEST_PATH"].include?("settings") %>"><%= link_to('Settings', account_settings_path) %></li>
				<li><%= link_to('Logout', destroy_user_session_path, data: { method: :delete }) %></li>
			</ul>
		</nav>
	</div><!-- /.col-md-9 -->

	<% if admin_with_sidebar?(controller_name) %>
		<div class="col-md-3 no-padd">
			<div class="sidebar-header">
				<ul class="header-nav">
					<li>
						<a class="btn btn-primary btn-sm btn-labeled" data-toggle="modal" href="#create-article">
							<span class="btn-label"><i class="fa fa-plus"></i></span> Create Article
						</a>
					</li>
				</ul>
			</div>
		</div><!-- /.col-md-3 -->
	<% end %>
</div>

<% if controller_name == 'pages' %>
	<%= render 'admin/articles/create' %>
<% end %>
