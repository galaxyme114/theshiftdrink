<% content_for :title do %>
	<%= render 'admin/shared/heads' %>
 	<p>HYPERLINK EDITOR - NEW</p>
<% end %>

<% content_for :buttons do %>
	<%= render 'admin/hyperlinks/buttons' %>
<% end %>

<% content_for :page_content do %>
<div class="col-md-6">
	<div class="panel panel-default">
		<div class="panel-heading">Create a Hyperlink</div>

		<%= simple_form_for(@hyperlink, url: page_hyperlinks_path(@issue, @article, @page)) do |f| %>
			<div class="panel-body">
				<div class="form-group">
					<div class="col-md-12">
						<%= f.input :source_url, error: false, label: 'Source URL' %>
					</div>
				</div><!-- .form-group -->
				<div class="form-group" id="page-coordinates">
					<div class="col-md-3">
						<%= f.input :coord_x, error: false, label: 'X', input_html: { value: 0 } %>
					</div>
					<div class="col-md-3">
						<%= f.input :coord_y, error: false, label: 'Y', input_html: { value: 0 } %>
					</div>
					<div class="col-md-3">
						<%= f.input :coord_w, error: false, label: 'W', input_html: { value: 100 } %>
					</div>
					<div class="col-md-3">
						<%= f.input :coord_h, error: false, label: 'H', input_html: { value: 50 } %>
					</div>
				</div><!-- .form-group -->
			</div>

			<div class="panel-footer">
				<%= f.button :submit, :class => 'btn btn-primary btn-sm' %>
			</div>
		<% end %>
	</div>
</div><!-- .col-md-6 -->

<div class="col-md-6">
	<div class="panel panel-default">
		<div class="panel-body">
			<div class="relative">
		        <%= image_tag @page.image_url(:large), :id => 'link-crop', :style => 'width: 456px; height: 610px' %>
			</div>
		</div>
	</div>
</div><!-- .col-md-6 -->
<% end %>

<%= render 'admin/shared/layout' %>
