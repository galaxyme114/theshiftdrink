<%= title "The Shift Drink :: #{@issue.title}" %>

<div class="container">
  <div class="row" id="media">
    <div class="page-header">
      <div class="row" id="media-header">
        <div class="col-md-6" id="logo">
          <img src="https://s3-us-west-2.amazonaws.com/realtheshiftdrink/static/wob-logo.png" style="width: 360px;">
        </div>

        <div class="col-md-6" id="title">
          <span class="article-title"><%= @article.title %></span>
        </div>
      </div>
    </div><!-- .page-header -->

    <div class="row">
      <% if @medias.empty? %>
        <div class="col-lg-12">
          <p>No media found.</p>
        </div>
      <% else %>
        <% @medias.each do |media| %>
            <div class="col-lg-2 col-md-3 col-xs-4 thumb <%= media.media_type.downcase %>">
                <a class="thumbnail lightbox" href="<%= media.presentation_url %>"
                  style="background: url(<%= media.thumbnail %>) no-repeat center center; background-size: cover; height: 150px"></a>
            </div>
        <% end %>
      <% end %>
    </div><!-- .row -->
  </div>
</div>

<% content_for :javascripts do %>
<script>
$(window).on('resize', function(){
  var cw = $('.thumbnail').width();

  $('.thumbnail').css({ 'height': cw + 'px' });
});
</script>
<% end %>
